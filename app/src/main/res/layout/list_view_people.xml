<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relateve_id">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_location_icon"
        android:layout_alignParentStart="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@id/imageView"
       android:layout_marginTop="10dp"
        android:layout_marginEnd="-54dp"

        android:layout_marginRight="-52dp"
        android:text="name" />

    <TextView
        android:id="@+id/Surname_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/Name_id"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-76dp"
        android:text="surname" />

    <TextView
        android:id="@+id/description_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name_id"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-76dp"
        android:text="Description" />



    <TextView
        android:id="@+id/Km_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_id"
        android:layout_alignEnd="@id/imageView"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="-63dp"
        android:text="Km Away" />


    <LinearLayout
        android:id="@+id/expand_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imageView"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="message hjffhjkgjhvoyfukyrsyfiuv;jkv;b fjh,vmhmhhfhjhffujh"/> >

        <Button
            android:id="@+id/button_Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Connect"

            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


</RelativeLayout>